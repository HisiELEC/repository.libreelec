<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.multiplay"
    name="Multiplay"
    version="4.0.0"
    provider-name="rootcoder">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.beautifulsoup4" version="4.9.3+matrix.1" />
        <import addon="script.module.requests" version="2.25.1+matrix.1"/>
        <import addon="script.module.web-pdb" version="1.5.6+matrix.1" />
        <import addon="inputstream.adaptive" version="2.6.18.1" />
        <import addon="inputstream.ffmpegdirect" version="1.21.6.1" />
        <import addon="script.module.qrcode" version="6.1.0+matrix.2" />
        <import addon="script.module.websocket" version="0.58.0+matrix.2"/>
        <import addon="script.module.extinfo" version="1.0.0"/>
        <import addon="plugin.video.torresmo" version="1.0.0"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="multiplay.bin.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en">Assista aos últimos lançamentos em HD</summary>
        <description lang="en">Filmes, animes e séries em HD</description>
        <platform>all</platform>
        <assets>
            <icon>multiplay.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        <reuselanguageinvoker>true</reuselanguageinvoker>
    </extension>
</addon>

